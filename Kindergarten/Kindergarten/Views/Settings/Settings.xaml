<UserControl x:Class="Kindergarten.Views.Settings.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kindergarten.Views.Settings"
             xmlns:dataControl="clr-namespace:Kindergarten.Views.Data"
             xmlns:vms="clr-namespace:Kindergarten.ViewModels.SettingsViewModels.PagesViewModels"
             xmlns:localPage="clr-namespace:Kindergarten.Views.Settings.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vms:ChildrenSetVM}">
            <localPage:ChildrenSet/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:DishListSetVM}">
            <localPage:DishListSet/>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <dataControl:MenuControl ItemsSource="{Binding MenuItemsData}" SelectedItem="{Binding SelectedMenu, Mode=TwoWay}"/>
        <ContentPresenter Grid.Column="1" Content="{Binding CurrentContent, Mode=TwoWay}"/>
    </Grid>
</UserControl>
